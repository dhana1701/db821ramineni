extends layout 
 
block content 
  h1= title 
 
  if (toShow == null) 
    h2 No instance to delete 
  else 
    - let technologyid = toShow._id 
    - let type = toShow.type
    - let estblishementdate = toShow.estblishementdate 
    - let Areas_of_technology = toShow.Areas_of_technology 
    - let actionid = "/resource/technology/" + technologyid 
    script let actionid = "#{actionid}" 
    div 
      div.row 
        div(class='technologyAttr mr-3') technology ID is: 
        div #{technologyid} 
      div.row 
        div(class='technologyAttr mr-3') technology Name is: 
        div #{type} 
      div.row 
        div(class='technologyAttr mr-3') estblishementdate is: 
        div #{estblishementdate} 
      div.row 
        div(class='technologyAttr mr-3') Areas_of_technology is: 
        div #{Areas_of_technology} 
 
    button(class="btn btn-danger m-2" onclick="deleteOnid()") Delete 
    button(class="btn btn-secondary m-2" onclick="cancel()") Cancel 
 
  script. 
    function cancel() { 
      // Go back to the home page for the costume collection 
      window.location.href='/technology' 
    } 
  script. 
    function deleteOnid() { 
      console.log("starting delete") 
      // delete first 
      fetch(actionid, { 
        method: 'DELETE'
      }).then((resp) => { 
        return resp.text();
      }).then((body) => { 
        alert("Delete succeded") 
        window.location.href='/technology' 
        // TODO handle body 
      }).catch((error) => { 
        // TODO handle error 
        alert("Delete failed " + error ) 
      }); 
    }